<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlockchainInfoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        
                                    <!--  Blockchain INFO  -->
    <TextView
        android:id="@+id/textView_blockchain_chain_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:maxLines="1"
        android:text="Chain:"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044" />

        <TextView
            android:id="@+id/textView_blockchain_chain_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Value"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.135"
            app:layout_constraintStart_toEndOf="@+id/textView_blockchain_chain_title"
            app:layout_constraintTop_toBottomOf="@+id/textView_blockchain_title"
            app:layout_constraintVertical_bias="0.045" />

        <TextView
        android:id="@+id/textView_blockchain_blocks_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:maxLines="1"
        android:text="Blocks:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.097"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_blockchain_chain_title"
        app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView_blockchain_blocks_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Value"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.097"
            app:layout_constraintStart_toEndOf="@+id/textView_blockchain_blocks_title"
            app:layout_constraintTop_toBottomOf="@+id/textView_blockchain_chain_value"
            app:layout_constraintVertical_bias="0.093" />

        <TextView
        android:id="@+id/textView_blockchain_difficulty_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:maxLines="1"
        android:text="Difficulty:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_blockchain_blocks_title"
        app:layout_constraintVertical_bias="0.0" />


        <!--  Network INFO  -->

        <TextView
            android:id="@+id/textView_blockchain_difficulty_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Value"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.13"
            app:layout_constraintStart_toEndOf="@+id/textView_blockchain_difficulty_title"
            app:layout_constraintTop_toBottomOf="@+id/textView_blockchain_blocks_value"
            app:layout_constraintVertical_bias="0.101" />

        <TextView
        android:id="@+id/textView_network_version_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:maxLines="1"
        android:text="Version:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_blockchain_difficulty_title"
        app:layout_constraintVertical_bias="0.414" />

        <TextView
            android:id="@+id/textView_network_version_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Value"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.165"
            app:layout_constraintStart_toEndOf="@+id/textView_network_version_title"
            app:layout_constraintTop_toBottomOf="@+id/textView_network_title"
            app:layout_constraintVertical_bias="0.101" />

        <TextView
        android:id="@+id/textView_network_localServices_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:maxLines="1"
        android:text="Local services:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.124"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_network_version_title"
        app:layout_constraintVertical_bias="0.027" />

        <TextView
            android:id="@+id/textView_network_localServices_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Value"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.093"
            app:layout_constraintStart_toEndOf="@+id/textView_network_localServices_title"
            app:layout_constraintTop_toBottomOf="@+id/textView_network_version_value"
            app:layout_constraintVertical_bias="0.295" />

        <TextView
        android:id="@+id/textView_network_warnings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:maxLines="1"
        android:text="Warnings:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_network_localServices_title"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_network_warnings_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="None"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_network_warnings_title"
        app:layout_constraintVertical_bias="0.181" />

        <TextView
            android:id="@+id/textView_blockchain_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BLOCKCHAIN INFO"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.08" />

        <TextView
            android:id="@+id/textView_network_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NETWORK INFO"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.628" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>